<h1 class="page-header text-center">
  <%= @subject.code %>-<%= @subject.name %>
</h1>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1 well text-center">

      <p class="text-justify"><%= @subject.description %></p>

      <div class="subject-actions">
        <%= link_to 'Edit', edit_subject_path(@subject), class: "btn btn-xs btn-default" %>
        <%= link_to 'Delete', subject_path(@subject), method: :delete,
                      data: { confirm: "Are your sure you want to delete this subject?" },
                      class: "btn btn-xs btn-danger" %>
        <%= link_to 'View all subjects', subjects_path, class: "btn btn-xs btn-default" %>
      </div>
  </div>

  <div class="comment-section col-sm-10 col-sm-offset-1 text-center">
    <h2>Comments</h2>
    <%= render @subject.comments %>
    <%= render "comments/form" %>
  </div>
</div>
