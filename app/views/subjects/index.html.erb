<p id="notice"><%= notice %></p>

<h1 class="page-header text-center">Subjects</h1>

<p><%= link_to 'Create new subject', new_subject_path, class: "btn btn-sm btn-default pull-right" %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.code %></td>
        <td><%= subject.name %></td>
        <td><%= truncate(subject.description, length: 70) %>
        <td class="text-center">
          <%= link_to 'Show', subject, class: "btn btn-xs btn-info" %>
          <%= link_to 'Edit', edit_subject_path(subject), class: "btn btn-xs btn-warning" %>
          <%= link_to 'Destroy', subject, method: :delete, class: "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
