<%= form_with(model: subject, local: true, class: "form-horizontal") do |form| %>

  <%= render "commons/errors", obj: subject %>

  <div class="form-group">
    <%= form.label :code, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.text_field :code, id: :subject_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :subject_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.text_area :description, id: :subject_description, rows: 10, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :department_id, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.collection_select :department_id, Department.all, :id, :name, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-md btn-info" %>
    </div>
  </div>
<% end %>
