<%= form_with(model: user, local: true, class: "form-horizontal") do |form| %>

  <%= render "commons/errors", obj: user %>

  <div class="form-group">
    <%= form.label :student_id, "Student ID", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :student_id, id: :user_student_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :first_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :first_name, id: :user_first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :last_name, id: :user_last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.email_field :email, id: :user_email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.password_field :password, id: :user_password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-md btn-info" %>
    </div>
  </div>
<% end %>
